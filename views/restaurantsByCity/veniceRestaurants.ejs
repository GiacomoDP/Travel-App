<h2>Restaurants from Venice</h2>

<div class="border border-dark rounded">

    <div class="shadow-lg p-3 mb-5 bg-white border border-primary rounded">Name of restaurant:
        <% veniceRestaurants.forEach(restaurant => { %>
            <img src="<%= restaurant.picture %> " alt="restaurantPic">
            <h3>


                <%= restaurant.name  %>
            </h3>
    </div>

    <div class="shadow-lg p-3 mb-5 bg-white border border-success rounded">Address:
        <h5>
            <%= restaurant.address %>
        </h5>
    </div>

    <div class="shadow-lg p-3 mb-5 bg-white border border-danger rounded">Description:
        <p>
            <%= restaurant.description %>
        </p>
    </div>

    <div class="shadow-lg p-3 mb-5 bg-white border border-warning rounded">Price:
        <span><%= restaurant.price %> </span>
        <% }) %>
    </div>


</div>